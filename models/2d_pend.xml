            <geom name = "pend_stick" type = "box" fromto = "0 0 0 0 0 .5" size = ".003 .003" mass = "10"/>
            <body name = "end_mass" pos = "0 0 .5" gravcomp = "0">
            <!-- <geom name = "pend_stick" type = "box" fromto = "0 0 0 0 0 -.5" size = ".01 .01" mass = "1"/>
