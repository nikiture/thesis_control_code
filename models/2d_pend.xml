        <accelerometer name = "IMU_acc" site = "IMU_loc" noise = "2"/>
        <gyro name = "IMU_gyro" site = "IMU_loc" noise = ".05"/>
        <!-- <accelerometer name = "IMU_acc" site = "IMU_loc" noise = "0"/>
