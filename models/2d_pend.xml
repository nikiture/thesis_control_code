                <!-- <site name = "IMU_loc" axisangle = "1 0 0 90"/>  -->
                <site name = "IMU_loc"/> 
            </body>
        </body>


    </worldbody>

    <!-- <actuator>
        <motor name = "propeller" site = "pend_end" gear = "0 0 0 0 0 1"/>
    </actuator> -->

    <sensor>
        <!-- <accelerometer name = "IMU_acc" site = "IMU_loc" noise = ".01"/>
